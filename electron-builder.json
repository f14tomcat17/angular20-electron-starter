{
  "appId": "com.example.angular-electron",
  "productName": "AngularElectronPro",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*"
  ],
  "publish": {
    "provider": "github"
  },
  "asar": true,
  "win": {
    "icon": "electron/resources/app.ico",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Angular20 Electron Starter",
    "runAfterFinish": true,
    "deleteAppDataOnUninstall": false,
    "license": "electron/resources/LICENSE.txt",
    "installerHeader": "electron/resources/installerHeader.bmp",
    "installerIcon": "electron/resources/app.ico",
    "uninstallerIcon": "electron/resources/app.ico"
  }
}
